#! /bin/sh

sxhkd &
deepin-terminal &
google-chrome-stable &
#
# Monitor configuration set.
xrandr --output HDMI1 --auto --primary
xrandr --output HDMI0 - auto --left-of HDMI1
# Workspaces defined.
bspc monitor HDMI-1 -d primary code reading IX X
bspc monitor HDMI-0 -d I II III IV V

# Polybar
# $HOME/.config/polybar/launch.sh
# Disabled for now until a simpler configuration can be made.

# Works fantastic, but there is a slight glitch with lemonbar.
# For now, I'm going to disable this and personally specifiy a monitor.
#My monitor setup.
#for monitor in $(bspc query -M); do
#	bspc monitor $monitor -d A B C D E F
#done

#bspc monitor HDMI-0 -d 1 2 3 4 5
#bspc monitor HDMI-1 -d 6 7 8 9 0

#
bspc config border_width         2
bspc config window_gap          15

bspc config split_ratio          0.52
bspc config borderless_monocle   true
bspc config gapless_monocle      true

#bspc rule -a Gimp desktop='^8' state=floating follow=on
bspc rule -a google-chrome-stable desktop=^2
#bspc rule -a htop desktop=^1 state=floating
bspc rule -a Atom desktop=^7
bspc rule -a deepin-terminal desktop=^2 state=floating
bspc rule -a google-chrome-stable desktop=^7
bspc rule -a Screenkey manage=off

# Wallpaper using feh currently. #Daisy Ridley FTW. wallhaven-356407.png
feh --bg-scale Pictures/wallpapers/wallpapers-updated/W/FZcN3zf.jpg

panel &
